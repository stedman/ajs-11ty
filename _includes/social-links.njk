{% if person.email %}
<a href="mailto:{{ person.email }}" title="Email: {{ person.email }}" class="icon">
  <ion-icon name="at-sharp"><i class="is-sr-only">email</i></ion-icon>
</a>
{% endif %}

{% if person.url %}
<a href="{{ person.url }}" title="Home: {{ person.url }}" class="icon">
  <ion-icon name="home"><i class="is-sr-only">homepage</i></ion-icon>
</a>
{% endif %}

{% if person.twitter %}
<a href="https://twitter.com/{{ person.twitter }}" title="Twitter: {{ person.twitter }}" class="icon">
  <ion-icon name="logo-twitter"><i class="is-sr-only">Twitter</i></ion-icon>
</a>
</a>
{% endif %}

{% if person.github %}
<a href="https://github.com/{{ person.github }}" title="GitHub: {{ person.github }}" class="icon">
  <ion-icon name="logo-github"><i class="is-sr-only">GitHub</i></ion-icon>
</a>
{% endif %}

{% if person.linkedin %}
<a href="https://www.linkedin.com/in/{{ person.linkedin }}" title="LinkedIn: {{ person.linkedin }}" class="icon">
  <ion-icon name="logo-linkedin"><i class="is-sr-only">LinkedIn</i></ion-icon>
</a>
{% endif %}
